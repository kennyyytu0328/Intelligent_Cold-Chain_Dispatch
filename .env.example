# ICCDDS Environment Configuration Template
# IMPORTANT: Copy this file to .env and replace ALL placeholder values
# DO NOT commit .env to git - it contains sensitive credentials!

# ======================
# Application
# ======================
APP_NAME=ICCDDS
APP_VERSION=1.0.0
DEBUG=false

# ======================
# Database
# ======================
# PostgreSQL with PostGIS (Docker on port 5433)
# IMPORTANT: Change YOUR_DB_PASSWORD_HERE to a secure password!
DATABASE_URL=postgresql+asyncpg://iccdds:YOUR_DB_PASSWORD_HERE@localhost:5433/iccdds
DATABASE_URL_SYNC=postgresql://iccdds:YOUR_DB_PASSWORD_HERE@localhost:5433/iccdds
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ======================
# Redis & Celery
# ======================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ======================
# Optimization Defaults
# ======================
DEFAULT_SOLVER_TIME_LIMIT=300
DEFAULT_AMBIENT_TEMPERATURE=30.0
DEFAULT_INITIAL_VEHICLE_TEMP=-5.0
AVERAGE_SPEED_KMH=30

# ======================
# Depot Location
# ======================
DEFAULT_DEPOT_LATITUDE=25.0330
DEFAULT_DEPOT_LONGITUDE=121.5654
DEFAULT_DEPOT_ADDRESS=台北市信義區物流中心

# ======================
# Constraint Penalties
# ======================
TEMP_VIOLATION_PENALTY=100000
LATE_DELIVERY_PENALTY=1000
VEHICLE_FIXED_COST=50000
DISTANCE_COST_PER_KM=10
INFEASIBLE_COST=10000000

# ======================
# Security
# ======================
# IMPORTANT: Generate a secure secret key for production using:
#   openssl rand -hex 32
SECRET_KEY=YOUR_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION
ENVIRONMENT=development

# ======================
# Docker Configuration
# ======================
# Match these with your docker-compose.yml
POSTGRES_USER=iccdds
POSTGRES_PASSWORD=YOUR_DB_PASSWORD_HERE
POSTGRES_DB=iccdds

# ======================
# Frontend (Vite)
# ======================
VITE_API_URL=http://localhost:8000
